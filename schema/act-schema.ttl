@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix earl: <http://www.w3.org/TR/EARL10/#> .

@prefix act: <https://w3c.github.io/wcag-act/schema/act-schema.ttl#> .
@prefix autowcag: <https://w3c.github.io/wcag-act/schema/autowcag-schema.ttl#> .


# **************
# ACT Schema
# **************

# Classes

act:Rule
  a rdfs:Class ;
  rdfs:label "Rule"@en ;   
  rdfs:comment "Rule with ACT format"@en .

act:AtomicRule
  a rdfs:Class ;
  rdfs:label "Atomic Rule"@en ;   
  rdfs:comment "A rule that describes how to test a specific type of solution."@en ;
  rdfs:subClassOf act:Rule, earl:TestCase .

act:ComposedRule
  a rdfs:Class ;
  rdfs:label "Composed Rule"@en ;   
  rdfs:comment "A rule that describes how results from atomic rules should be used to decide if an accessibility requirement was failed."@en ;
  rdfs:subClassOf act:Rule, earl:TestRequirement .

act:AccessibilityRequirement
  a rdfs:Class ;
  rdfs:label "Accessibility Requirement"@en ;   
  rdfs:comment "A requirement that a particular web page must conform to for it to be considered accessible."@en .

act:AspectUnderTest
  a rdfs:Class ;
  rdfs:label "Aspects Under Test"@en ;   
  rdfs:comment "An aspect is a distinct part of the test subject or its underlying implementation."@en ;
  rdfs:subClassOf act:Rule .

act:TestDefinition
  a rdfs:Class ;
  rdfs:label "Test Definition"@en ;   
  rdfs:comment "....."@en .

act:AgregationDefinition
  a rdfs:Class ;
  rdfs:label "Agregation Definition"@en ;   
  rdfs:comment "....."@en .



# Datatype Properties

act:accessibilitySupport
  a rdf:Property ;
  rdfs:label "Accessibility Support"@en ;
  rdfs:domain act:Rule ;
  rdfs:range rdfs:Literal .

act:assumptions
  a rdf:Property ;
  rdfs:label "Assumptions"@en ;
  rdfs:domain act:Rule ;
  rdfs:range rdfs:Literal .

act:description
  a rdf:Property ;
  rdfs:label "Description"@en ;
  rdfs:domain act:Rule ;
  rdfs:range rdfs:Literal .

act:exceptions
  a rdf:Property ;
  rdfs:label "Exceptions"@en ;
  rdfs:domain act:Rule ;
  rdfs:range rdfs:Literal .

act:identifier
  a rdf:Property ;
  rdfs:label "Rule Identifier"@en ;
  rdfs:domain act:Rule ;
  rdfs:range rdfs:Literal .

act:limitations
  a rdf:Property ;
  rdfs:label "Limitations"@en ;
  rdfs:domain act:Rule ;
  rdfs:range rdfs:Literal .

act:title
  a rdf:Property ;
  rdfs:label "Title"@en ;
  rdfs:domain act:Rule ;
  rdfs:range rdfs:Literal .

act:applicability
  a rdf:Property ;
  rdfs:label "Applicability"@en ;
  rdfs:domain act:TestDefinition ;
  rdfs:range rdfs:Literal .

act:expectation
  a rdf:Property ;
  rdfs:label "Expectation"@en ;
  rdfs:domain act:TestDefinition ;
  rdfs:range rdfs:Literal .

act:agregationApplicability
  a rdf:Property ;
  rdfs:label "Agregation Applicability"@en ;
  rdfs:domain act:AgregationDefinition ;
  rdfs:range rdfs:Literal .

act:agregationExpectations
  a rdf:Property ;
  rdfs:label "Agregation Expextations"@en ;
  rdfs:domain act:AgregationDefinition ;
  rdfs:range rdfs:Literal .


# Object Properties

act:accessibilityRequirement
  a rdf:Property ;
  rdfs:label "Accessibility Requirement"@en ;
  rdfs:domain act:Rule ;
  rdfs:range act:AccessibilityRequirement .

act:aspectUnderTest
  a rdf:Property ;
  rdfs:label "Aspect Under Test"@en ;
  rdfs:domain act:AtomicRule ;
  rdfs:range act:AspectUnderTest .

act:testDefinition
  a rdf:Property ;
  rdfs:label "Test Definition"@en ;
  rdfs:domain act:AtomicRule ;
  rdfs:range act:TestDefinition .

act:atomicRulesList
  a rdf:Property ;
  rdfs:label "Atomic Rules List"@en ;
  rdfs:domain act:ComposedRule ;
  rdfs:range act:AtomicRule .

act:agregationDefinition
  a rdf:Property ;
  rdfs:label "Agregation Definition"@en ;
  rdfs:domain act:ComposedRule ;
  rdfs:range act:AgregationDefinition .


# Instances

act:httpMessage
  a act:AspectUnderTest ;
  rdfs:label "HTTP Message"@en ;
  rdfs:comment "The HTTP messages exchanged between a client and a server as part of requesting a web page may be of interest to ACT Rules."@en .

act:domTree
  a act:AspectUnderTest ;
  rdfs:label "DOM Tree"@en ;   
  rdfs:comment "The DOM tree constructed from parsing HTML, and optionally executing DOM manipulating JavaScript, may be of interest to ACT Rules to test the structure of web pages."@en .

act:cssStyling
  a act:AspectUnderTest ;
  rdfs:label "CSS Styling"@en ;   
  rdfs:comment "The computed CSS [CSS2] styling resulting from parsing CSS and applying it to the DOM [DOM] may be of interest to ACT Rules that wish to test the web page as presented to the user."@en .

act:accessibilityTree
  a act:AspectUnderTest ;
  rdfs:label "Accessibility Tree"@en ;   
  rdfs:comment "The accessibility tree constructed from extracting information from both the DOM [DOM] tree and the CSS [CSS2] styling may be of interest to ACT Rules."@en .

act:language
  a act:AspectUnderTest ;
  rdfs:label "Language"@en ;   
  rdfs:comment "Language, either written or spoken, contained in nodes of the DOM [DOM] or accessibility trees may be of interest to ACT Rules that intend to test things like complexity or intention of the language."@en .



